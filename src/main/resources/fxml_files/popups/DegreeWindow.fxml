<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.user_interface.popups.DegreeWindowController">
    <children>
        <Label alignment="CENTER" text="New Degree" VBox.vgrow="NEVER">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
      <VBox spacing="10.0">
         <children>
            <Label text="Title:">
               <padding>
                  <Insets bottom="-5.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="titleField" prefHeight="40.0" />
            <Label text="Institution:">
               <padding>
                  <Insets bottom="-5.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="institutionField" prefHeight="40.0" />
            <Label text="Level:">
               <padding>
                  <Insets bottom="-5.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="levelChoiceBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="40.0" VBox.vgrow="ALWAYS" />
            <Label text="Graduation Year:">
               <padding>
                  <Insets bottom="-5.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Spinner fx:id="gradYearSpinner" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="40.0" VBox.vgrow="ALWAYS" />
            <Label text="Grade">
               <padding>
                  <Insets bottom="-5.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Spinner fx:id="gradeSpinner" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="40.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
        <Separator prefWidth="200.0" VBox.vgrow="NEVER">
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </Separator>
        <Region VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="-20.0" />
            </VBox.margin>
        </Region>
        <Button focusTraversable="false" minHeight="35.0" mnemonicParsing="false" onAction="#addDegreeButtonClicked" prefHeight="40.0" prefWidth="120.0" text="Add Degree" VBox.vgrow="NEVER">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Label fx:id="resultLabel" text="Here a message is displayed!" VBox.vgrow="NEVER">
            <VBox.margin>
                <Insets bottom="-10.0" top="-10.0" />
            </VBox.margin>
            <font>
                <Font size="14.0" />
            </font>
        </Label>
    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
